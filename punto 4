punto 2 .
Algoritmo RevertirTexto
    Definir longitu, i como Entero
    Definir text, fraserev como Cadena
	
    Escribir("Ingresa una cadena de texto: ")
    Leer text
	
    longitu <- Longitud (text)
    fraserev <- ""
	
    Para i <- longitu hasta 1 con paso -1 Hacer
        fraserev <- fraserev + SubCadena(texto, i, 1)
    FinPara
	
    Escribir "El texto revertido es: ", fraserev
FinAlgoritmo

punto 3
Algoritmo InvertirNumero

    Funcion getInvertNumber(numero: Entero) Devolver invertido: Entero
        Definir invertido, digito Como Entero
        invertido <- 0

        Mientras numero <> 0 Hacer
            invertido <- invertido * 10 + numero MOD 10
            numero <- numero / 10
        Fin Mientras

        Devolver invertido
    Fin Funcion

    Procedimiento principal()
        Definir numero, invertido Como Entero

        Escribir "Ingrese un número:"
        Leer numero

        invertido <- getInvertNumber(numero)

        Escribir "El número invertido es:", invertido
    Fin Procedimiento

Fin Algoritmo
